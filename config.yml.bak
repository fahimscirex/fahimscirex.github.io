#         lineNos: true
#         style: monokai
outputs:
    home:
        - HTML
        - RSS
        - JSON # is necessary


languages:


    bn:
        languageName: ":bn:"
        languageAltTitle: Bangla
        weight: 2
        title: ফাহিম মোন্তাসির মিসবাহ

        menu:
            main:
                - identifier: search
                name: খোঁজ  দ্য সার্চ
                url: /search/
                weight: 10 
                - identifier: categories
                name: বিভাগ
                url: /categories/
                weight: 20
                - identifier: contact
                name: যোগাযোগ
                url: "/about/#contact"
        homeInfoParams:
                Title: "হ্যালো!"
                Content: I'm Fahim Montasir Misbah. A Foss enthusiast from Dhaka,Bangladesh. This GitHub Page has been my personal blog for a while. My blog posts are mostly about Linux stuffs. I also write about Books, Movies, Musics and other random stuffs. So, make yourself at home. And let me know if you have any suggestions.
